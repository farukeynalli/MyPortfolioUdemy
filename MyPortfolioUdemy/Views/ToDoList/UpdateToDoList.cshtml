@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListId" />
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" required />
                            <br />
                            <label>Tarih</label>
                            <input type="date" class="form-control" asp-for="Date" required />
                            <br />
                            <label>Resim Yolu</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" required />
                            <br />
                            <button class="btn btn-warning">Güncelle</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

