@model ToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">To Do List</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacakları Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" required />
                            <br />

                            <label>Resim Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" required />
                            <br />

                            <label>Tarih</label>
                            <input type="date" class="form-control" asp-for="Date" required />
                            <br />
                            <button class="btn btn-primary">Listeye Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
